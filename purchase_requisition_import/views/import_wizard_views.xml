<odoo>
    <record id="view_purchase_requisition_line_import_wizard_form" model="ir.ui.view">
        <field name="name">purchase.requisition.line.import.wizard.form</field>
        <field name="model">purchase.requisition.line.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Líneas a Requisición">
                <group>
                    <field name="excel_file" widget="binary" required="1"/>
                </group>
                <footer>
                    <button name="action_import_requisition_lines" string="Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>